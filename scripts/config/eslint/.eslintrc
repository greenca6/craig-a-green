{
  "root": true,
  "extends": ["airbnb"],
  "plugins": [
    "react",
    "jest"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "no-underscore-dangle": 0,
    "jsx-a11y/label-has-for": [ 1, {
      "required": {
        "some": [ "nesting", "id" ]
      }
    }]
  }
}
